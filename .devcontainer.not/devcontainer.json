{
  "name": "Bickley-Wallace",
  "dockerFile": "Dockerfile",

  "forwardPorts": [3443, 3444],

  "runArgs": [ "-u", "node"],

  "settings": {
      "terminal.integrated.shell.linux": "/bin/bash"
  },

  "postCreateCommand": "ls && ./.devcontainer/scripts/post-create-command.sh",

  "extensions": [
    "christian-kohler.npm-intellisense",
    "dbaeumer.vscode-eslint",
    "eg2.vscode-npm-script",
    "ms-azuretools.vscode-docker"
  ],

  "mounts": [
    "source=${localEnv:CYPRESS_CACHE_FOLDER},target=/home/node/.cache/Cypress,type=bind,consistency=cached",
    "source=${localEnv:npm_config_cache},target=/home/node/.npm,type=bind,consistency=cached"
  ]
}
