{
  "compilerOptions": {
    "lib": ["ES2020"],
    "module": "ESNext",
    "target": "ES2019",

    "allowJs": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,

    "baseUrl": ".",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,

    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,

    "types": []
  },
  "exclude": [
    "node_modules"
  ]
}