{
  "name": "bickley-wallace-api",
  "version": "1.0.0",
  "description": "The API behind my blog",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "start:debug": "node --inspect=6229 dist/index.js",
    "debug": "nodemon -e js,ts --watch ./src --exec 'npm run-script build && npm run-script start:debug'",
    "lint": "eslint --ext .js,.ts .",
    "test": "jest",
    "test:watch": "node --inspect ./node_modules/.bin/jest --runInBand --watch"
  },
  "author": "Josh Bickley-Wallace <joshbickleywallace@outlook.com>",
  "license": "MIT",
  "dependencies": {
    "cookie-parser": "^1.4.4",
    "dotenv": "^8.1.0",
    "express": "^4.17.1"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.2",
    "@types/dotenv": "^6.1.1",
    "@types/express": "^4.17.1",
    "@types/node": "^12.7.5",
    "nodemon": "^1.19.2",
    "ts-node": "^8.4.1",
    "typescript": "^3.6.3"
  },
  "nodemonConfig": {
    "ignore": [
      "**/*.spec.ts",
      "node_modules"
    ],
    "watch": [
      "src"
    ],
    "exec": "npm start",
    "ext": "ts"
  }
}