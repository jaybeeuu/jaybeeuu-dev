{
  "extends": [
    "@bickley-wallace/eslint-config/base",
    "@bickley-wallace/eslint-config/jest",
    "plugin:react/recommended"
  ],
  "env": {
    "browser": true
  },
  "plugins": [
    "react"
  ],
  "settings": {
    "react": {
      "pragma": "h",
      "version": "detect"
    },
    "import/resolver": {
      "webpack": {
        "config": "./webpack.config.js"
      }
    }
  },
  "rules": {
    "react/prop-types": "off"
  },
  "overrides": [
    {
      "files": [
        "test/**/*.ts",
        "test/**/*.tsx",
        "**/*.spec.ts",
        "**/*.spec.tsx"
      ],
      "env": {
        "jest/globals": true
      },
      "rules": {
        "react/": "off",
        "jest/prefer-expect-assertions": "off",
        "jest/valid-describe": "off",
        "jest/valid-title": ["error", { "ignoreTypeOfDescribeName": false }]
      }
    },
  ]
}
