{
  "name": "@bickley-wallace/posts",
  "version": "0.0.0",
  "author": "Josh Bickley-Wallace <joshbickleywallace@outlook.com> (https://github.com/jayseeare)",
  "license": "MIT",
  "description": "My blog",
  "keywords": [
    "Bickley-Wallace",
    "Josh",
    "Posts"
  ],
  "files": [
    "lib"
  ],
  "scripts": {
    "start": "compost --watch --href-root posts --include-unpublished",
    "lint": "markdownlint-cli2 \"**/*.md\" \"#node_modules\"",
    "spellcheck-interactive": "mdspell --en-GB --ignore-numbers \"**/*.md\" \"!**/node_modules/**/*.md\"",
    "spellcheck": "pnpm run spellcheck-interactive -- --report",
    "build": "compost --href-root posts"
  },
  "devDependencies": {
    "@bickley-wallace/compost": "workspace:*",
    "markdown-spellcheck": "^1.3.1",
    "markdownlint-cli2": "^0.1.3"
  }
}
