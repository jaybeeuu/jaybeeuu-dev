{
  "env": {
    "es6": true
  },
  "plugins": [
    "jest"
  ],
  "extends": [
    "plugin:jest/all"
  ],
  "overrides": {
    "jest": {
      "files": [
        "test/**/*.ts",
        "**/*.spec.ts"
      ],
      "env": {
        "jest/globals": true
      },
      "rules": {
        "jest/no-hooks": "off",
        "jest/prefer-expect-assertions": "off",
        "jest/valid-describe": "off",
        "jest/valid-title": ["error", { "ignoreTypeOfDescribeName": false }]
      }
    }
  }
}