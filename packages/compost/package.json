  "devDependencies": {
    "@bickley-wallace/eslint-config": "workspace:*",
    "@bickley-wallace/utilities": "workspace:*",
    "@types/jest": "^26.0.23",
    "@types/marked": "^2.0.2",
    "@types/node": "15.3.0",
    "@types/rmfr": "^2.0.0",
    "@types/sanitize-html": "^2.3.1",
    "@typescript-eslint/eslint-plugin": "^4.23.0",
