  "license": "MIT",
  "description": "A CLI took for compiling the posts in my blog.",
  "keywords": [
    "Compile",
    "Posts"
  ],
  "engines": {
    "node": ">=12.18.0"
  },
  "bin": "bin/compost.js",
  "main": "lib/index.js",
  "files": [
    "bin",
    "lib"
  ],
  "scripts": {
    "build": "tsc --project ./tsconfig.build.json --pretty",
    "start": "tsc --project ./tsconfig.build.json --pretty --watch",
