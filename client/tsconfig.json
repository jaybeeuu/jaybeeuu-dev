{
  "compilerOptions": {
    "target": "es2019",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "dist",
    "allowJs": true,

    "esModuleInterop": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "sourceMap": true,
    "strict": true
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.js",
    "**/*.jsx"
  ],
  "exclude": [
    "node_modules"
  ]
}